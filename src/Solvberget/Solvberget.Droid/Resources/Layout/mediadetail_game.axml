<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:textAppearance="@style/MediaDetailFieldName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/s_main_green"
        android:textAllCaps="true"
        android:text="Plattform"
        local:MvxBind="Visibility Visibility(Platform)" />
    <TextView
        android:textAppearance="@style/MediaDetailFieldContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        local:MvxBind="Text Platform; Visibility Visibility(Platform)" />
</LinearLayout>