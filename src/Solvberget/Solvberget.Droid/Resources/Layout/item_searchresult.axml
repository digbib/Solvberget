<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:background="@color/ui_itembackground"
    android:layout_gravity="top"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <Solvberget.Droid.Views.Components.CustomImageView
        android:layout_height="90dp"
        android:layout_width="60dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/default_list"
        local:MvxBind="ImageUrl Image" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp">
        <TextView
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@style/MediumText"
            local:MvxBind="Text Name"
            android:singleLine="true" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textAppearance="@style/SmallText"
                local:MvxBind="Text PresentableType"
                android:singleLine="true" />
            <TextView
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textAppearance="@style/SmallText"
                local:MvxBind="Text Year"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>