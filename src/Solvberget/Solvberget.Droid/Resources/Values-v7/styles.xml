<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
  <style name="MyBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
    <!-- API 7 theme customizations can go here. -->
    <item name="android:buttonStyle">@style/MyBaseTheme.Button</item>
  </style>

  <style name="MyBaseTheme.Button" parent="@android:style/Widget.Button">
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
  </style>

</resources>
