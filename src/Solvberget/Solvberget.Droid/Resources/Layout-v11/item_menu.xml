<?xml version="1.0" encoding="utf-8"?>
<Solvberget.Droid.Views.Components.BackgroundBindableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    orientation="horizontal"
    local:MvxBind="BackgroundColor SelectedMenuItemBackground(IsSelected)">
    <Solvberget.Droid.Views.Components.IconTextView
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        local:MvxBind="Text IconChar"
        android:textAppearance="?android:attr/textAppearanceListItem" />
    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="#fff"
        local:MvxBind="Text Title"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:background="?android:attr/activatedBackgroundIndicator" />
</Solvberget.Droid.Views.Components.BackgroundBindableLinearLayout>